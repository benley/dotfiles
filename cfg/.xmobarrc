-- vi:ft=haskell
Config {
         font = "xft:Operator Mono:style=Book,Symbola,FontAwesome"
       , additionalFonts = [ "xft:Operator Mono:style=Book Italic"
                           ]
       , bgColor = "#263238"
       , fgColor = "#CDD3DE"
       , position = Top
       , border = BottomB
       , borderColor = "#37474F"
       , borderWidth = 3
       , commands = [ Run MultiCpu
                          [ "--template", "\x1F4BB <autovbar>"
                          , "--Low", "40"
                          , "--High", "85"
                          , "--low", "#8bd649"
                          , "--normal", "#ea9560"
                          , "--high", "#EC5F67"
                          , "--ppad", "3"
                          ] 20
                    , Run Memory ["-t","Mem: <usedratio>%"] 20
                    , Run Swap [] 20
                    , Run Date "%a %b %_d %l:%M" "date" 20
                    , Run StdinReader
                    , Run Battery
                          [ "--template", "\xf240<acstatus><left>"
                          , "--suffix", "True"
                          , "--High", "90"
                          , "--high", "#8bd649"
                          , "--Low", "10"
                          , "--low", "#EC5F67"
                          , "--ppad", "3"
                          , "--"
                          , "-f", "AC0/online"
                          , "-o", "" -- "off"                -- Unplugged
                          , "-O", "<fc=#ea9560>\x26a1</fc>"  -- Charging
                          , "-i", "<fc=#8bd649>\x26a1</fc>"  -- Not charging
                          ] 50
                    , Run CoreTemp
                          [ "--template" , "\xf2c7 <core0>째C <core1>째C"
                          , "--Low"      , "70"        -- units: 째C
                          , "--High"     , "80"        -- units: 째C
                          , "--low"      , "#8bd649"
                          , "--normal"   , "ea9560"
                          , "--high"     , "#EC5F67"
                          ] 50
                    , Run Wireless "wlp1s0"
                          [ "--template", "<qualitybar><fn=1><essid></fn>"
                          , "--bback", "\x2003"
                          , "--bwidth", "5"
                          , "--bfore", "\x2581\x2583\x2585\x2587\x2589"
                          , "--Low", "20"
                          , "--low", "#EC5F67"
                          , "--normal", "#D5DBE5"
                          , "--High", "80"
                          --, "--high", "#8bd649"
                          , "--high", "#D5DBE5"
                          ] 50
                    , Run XMonadLog
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%XMonadLog%}{| %coretemp% | %battery% | %multicpu% | %memory% | %swap% | %wlp1s0wi% | <fc=#ea9560>%date%</fc>"
                 -- "<action=konsole><icon=/tmp/xterm.xpm/></action>"
       }
