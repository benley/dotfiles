[user]
	name = Benjamin Staffin
	email = ben@cloudscaling.com
[core]
	excludesfile = /Users/benley/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[gitreview]
	username = ben
[color]
	ui = auto
	diff = auto
	pager = true
	status = auto
	showbranch = auto
	interactive = auto
[diff]
	guitool = gvimdiff
	tool = vimdiff
[difftool]
	prompt = false
[alias]
	st = status
[gui]
	warndetachedcommit = true
[init]
	templatedir = ~/.git_template
[push]
	default = simple
